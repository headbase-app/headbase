{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://spec.headbase.app/core/definition",
  "title": "Data Item Definition",
  "description": "A definition for a data item, specifying the expected schema of the data property.",
  "type": "object",
  "required": ["id", "createdAt", "updatedAt"],
  "additionalProperties": false,
  "properties": {
    "definition": {
      "const": "https://spec.headbase.app/core/definition"
    },
    "id": {"type": "string", "format": "uuid"},
    "createdAt": {"type": "string", "format": "date-time"},
    "updatedAt": {"type": "string", "format": "date-time"},
    "deletedAt": {"type": "string", "format": "date-time"},
    "schema": {"$ref": "https://json-schema.org/draft/2020-12/schema"}
  }
}