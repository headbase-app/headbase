{
	"name": "@headbase-app/server",
	"version": "0.9.0",
	"description": "The server for Headbase providing backup and sync functionality.",
	"author": {
		"name": "Ben Ryder",
		"email": "dev@benryder.me"
	},
	"license": "AGPL-3.0-only",
	"files": [
		"dist",
		"README.md",
		"LICENSE.txt"
	],
	"type": "module",
	"scripts": {
		"start": "nest start",
		"start:watch": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main.js",
		"build": "nest build",
		"test": "vitest run",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"db:dump": "pg_dump headbase > ./backup/headbase.sql",
		"db:restore": "psql headbase < ./backup/headbase.sql",
		"db:init:data": "tsx testing/cli.ts"
	},
	"dependencies": {
		"@aws-sdk/client-s3": "^3.917.0",
		"@aws-sdk/s3-request-presigner": "^3.917.0",
		"@headbase-app/contracts": "^0.10.0",
		"@nestjs/common": "^11.1.7",
		"@nestjs/core": "^11.1.7",
		"@nestjs/mapped-types": "*",
		"@nestjs/platform-express": "^11.1.7",
		"@nestjs/schedule": "^6.0.1",
		"bcrypt": "^6.0.0",
		"dotenv": "^17.2.3",
		"drizzle-orm": "^0.44.7",
		"helmet": "^8.1.0",
		"jsonwebtoken": "^9.0.2",
		"ms": "^2.1.3",
		"nodemailer": "^7.0.10",
		"postgres": "^3.4.7",
		"qs": "^6.14.0",
		"reflect-metadata": "^0.2.2",
		"rxjs": "^7.8.2"
	},
	"devDependencies": {
		"@eslint/eslintrc": "^3.3.1",
		"@eslint/js": "^9.38.0",
		"@nestjs/cli": "^11.0.10",
		"@nestjs/schematics": "^11.0.9",
		"@nestjs/testing": "^11.1.7",
		"@swc/cli": "^0.7.9",
		"@swc/core": "^1.15.2",
		"@types/bcrypt": "^6.0.0",
		"@types/express": "^5.0.4",
		"@types/jsonwebtoken": "^9.0.10",
		"@types/node": "^24.9.1",
		"@types/nodemailer": "^7.0.3",
		"@types/supertest": "^6.0.3",
		"@vitest/coverage-v8": "^4.0.12",
		"drizzle-kit": "^0.31.6",
		"eslint": "^9.38.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-prettier": "^5.5.4",
		"globals": "^16.4.0",
		"prettier": "^3.6.2",
		"source-map-support": "^0.5.21",
		"supertest": "^7.1.4",
		"superwstest": "^2.1.1",
		"ts-loader": "^9.5.4",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.46.2",
		"unplugin-swc": "^1.5.8",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "^4.0.12"
	}
}
