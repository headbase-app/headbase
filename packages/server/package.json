{
  "name": "@headbase-app/server",
  "version": "0.8.0",
  "description": "The central sync and backup server for Headbase.",
  "private": true,
  "author": "Ben Ryder <dev@benryder.me> (https://www.benryder.me)",
  "license": "AGPL-3.0-only",
  "scripts": {
    "prebuild": "rimraf ./dist",
    "build": "tsc --project ./tsconfig.build.json && tsc-alias",
    "build:prod": "(cd ../library && npm ci && npm run build) && npm ci && npm run build",
    "start": "tsx watch ./bin/index.ts",
    "start:prod": "node ./dist/bin/index.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "vitest run",
    "db:dump": "pg_dump headbase > ./backup/headbase.sql",
    "db:restore": "psql headbase < ./backup/headbase.sql",
    "db:init:data": "tsx testing/cli.ts",
    "dev:common-rebuild": "(cd ../library && npm run build) && npm i"
  },
  "dependencies": {
    "@headbase-app/common": "^0.9.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.41.0",
    "express": "^5.1.0",
    "ioredis": "^5.6.0",
    "jose": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "mailgun.js": "^9.3.0",
    "ms": "^3.0.0-canary.1",
    "postgres": "^3.4.5",
    "pumpit": "^10.1.0",
    "qs": "^6.14.0",
    "rimraf": "^6.0.1",
    "uuid": "^9.0.1",
    "validator": "^13.12.0",
    "ws": "^8.18.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.11.11",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/ms": "^2.1.0",
    "@types/node": "^20.9.1",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^10.0.0",
    "@types/validator": "^13.12.2",
    "@types/ws": "^8.18.0",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "drizzle-kit": "^0.30.5",
    "eslint": "^8.53.0",
    "supertest": "^6.3.3",
    "superwstest": "^2.0.4",
    "tsc-alias": "^1.8.11",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.9"
  },
  "type": "module",
  "files": [
    "build",
    "README.md",
    "LICENSE.txt"
  ],
  "engines": {
    "node": "22"
  }
}
