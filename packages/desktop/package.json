{
  "name": "@headbase-app/desktop",
  "description": "Turn your local files into a queryable database. Note taking, task management, knowledge bases and more.",
  "private": true,
  "version": "0.0.0",
  "license": "AGPL-3.0-only",
  "author": {
    "name": "Ben Ryder",
    "email": "dev@benryder.me"
  },
  "homepage": "https://github.com/headbase-app/headbase",
  "main": "./out/main/index.js",
  "scripts": {
    "lint": "eslint --cache .",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite dev",
    "preview": "electron-vite preview",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "electron-vite build && electron-builder --mac",
    "build:linux": "electron-vite build && electron-builder --linux",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "vitest run --project unit*",
    "test:unit:ui": "vitest --project unit* --ui",
    "test:e2e": "npx playwright test",
    "test:e2e:ui": "npx playwright test --ui"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-ts": "^3.1.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@playwright/test": "^1.55.0",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.13",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.1",
    "@vitest/browser": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12",
    "electron-devtools-installer": "^4.0.0",
    "electron-vite": "^4.0.0",
    "eslint": "^9.34.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "playwright": "^1.55.0",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.9.2",
    "vite": "^7.1.3",
    "vitest": "^3.2.4",
    "vitest-browser-react": "^1.0.1"
  },
  "dependencies": {
    "@codemirror/lang-markdown": "^6.4.0",
    "@codemirror/language-data": "^6.5.1",
    "@headlessui/react": "^2.2.9",
    "@hookform/resolvers": "^5.2.2",
    "@lezer/highlight": "^1.2.1",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@uiw/codemirror-extensions-hyper-link": "^4.25.2",
    "@uiw/codemirror-themes": "^4.25.2",
    "@uiw/react-codemirror": "^4.25.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "i18next": "^25.4.2",
    "js-yaml": "^4.1.0",
    "lucide-react": "^0.542.0",
    "pdfjs-dist": "^5.4.296",
    "react": "^19.1.1",
    "react-aria-components": "^1.13.0",
    "react-dom": "^19.1.1",
    "react-error-boundary": "^6.0.0",
    "react-hook-form": "^7.63.0",
    "react-i18next": "^15.7.2",
    "tailwind-merge": "^3.3.1",
    "tw-animate-css": "^1.4.0",
    "watcher": "^2.3.1",
    "zod": "^4.1.11"
  }
}
