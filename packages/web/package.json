    "@storybook/theming": "^8.3.6",
    "@stylistic/eslint-plugin": "^2.11.0",
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.10.1",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/validator": "^13.12.2",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/browser": "^2.1.8",
    "@vitest/ui": "^2.1.6",
