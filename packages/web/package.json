    "@hookform/resolvers": "^3.9.1",
    "@uiw/codemirror-extensions-basic-setup": "^4.23.6",
    "@uiw/codemirror-extensions-hyper-link": "^4.23.6",
    "@uiw/codemirror-themes": "^4.23.6",
    "@uiw/react-codemirror": "^4.23.6",
    "classnames": "^2.5.1",
    "codemirror": "^6.0.1",
    "idb": "^8.0.0",
    "lucide-react": "^0.378.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-helmet-async": "^2.0.5",
    "react-hook-form": "^7.53.2",
    "rxjs": "^7.8.1",
    "validator": "^13.12.0",
    "wouter": "^3.3.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
