{
  "name": "@headbase-app/web",
  "description": "The customizable database for your brain. Note-taking, task-management, personal knowledge bases and more. ",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start": "vite",
    "tsc": "tsc",
    "build": "npm run tsc && vite build",
    "preview": "vite preview",
    "sb:start": "storybook dev -p 6006 --no-open",
    "sb:build": "storybook build -o build",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "vitest run --reporter basic",
    "test:unit:ui": "vitest --ui",
    "test:unit:watch": "vitest",
    "test:e2e": "npx playwright test --reporter list",
    "test:e2e:ui": "npx playwright test --ui",
    "test:e2e:report": "npx playwright show-report",
    "test:e2e:setup": "npx playwright install",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test:browser": "vitest --workspace=vitest.workspace.ts",
    "test:browser:headless": "npx vitest --browser.headless"
  },
  "dependencies": {
    "@ben-ryder/jigsaw": "^0.25.0",
    "@ben-ryder/jigsaw-react": "^0.25.0",
