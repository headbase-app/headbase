{
	"name": "@headbase-app/mobile",
	"version": "0.0.0",
	"description": "Supercharge your local markdown files with content types and data views.",
	"private": true,
	"type": "module",
	"scripts": {
		"start": "vite",
		"start:sb": "storybook dev -p 6006",
		"build": "tsc -b && vite build",
		"build:sb": "storybook build",
		"preview": "vite preview",
		"test": "npm run test:unit && npm run test:e2e",
		"test:unit": "vitest run",
		"test:unit:ui": "vitest --ui",
		"test:e2e": "npx playwright test",
		"test:e2e:ui": "npx playwright test --ui",
		"test:e2e:report": "npx playwright show-report",
		"test:e2e:setup": "npx playwright install",
		"sync": "npx cap sync",
		"sync:android": "npx cap sync android",
		"sync:ios": "npx cap sync ios",
		"run:android": "npx cap run android",
		"run:ios": "npx cap run ios",
		"open:android": "npx cap open android",
		"open:ios": "npx cap open ios"
	},
	"dependencies": {
		"@capacitor-community/sqlite": "^8.0.0",
		"@capacitor/android": "^8.1.0",
		"@capacitor/core": "^8.1.0",
		"@capacitor/filesystem": "^8.1.2",
		"@capacitor/ios": "^8.1.0",
		"@solidjs/router": "^0.15.4",
		"drizzle-orm": "^0.45.1",
		"lucide-solid": "^0.574.0",
		"opfsx": "^0.1.0",
		"pdfjs-dist": "^5.4.624",
		"rxjs": "^7.8.2",
		"solid-js": "^1.9.10",
		"sqlocal": "^0.17.0",
		"zod": "^4.3.6"
	},
	"devDependencies": {
		"@capacitor/cli": "^8.1.0",
		"@storybook/addon-docs": "^10.2.9",
		"@types/node": "^24.10.1",
		"@vitest/browser-playwright": "^4.0.18",
		"happy-dom": "^20.6.1",
		"lightningcss": "^1.31.1",
		"storybook": "^10.2.9",
		"storybook-solidjs-vite": "^10.0.9",
		"typescript": "~5.9.3",
		"vite": "^7.3.1",
		"vite-plugin-solid": "^2.11.10",
		"vitest": "^4.0.18"
	}
}
