    "@hookform/resolvers": "^5.2.2",
    "@uiw/codemirror-extensions-basic-setup": "^4.25.1",
    "@uiw/codemirror-extensions-hyper-link": "^4.25.1",
    "@uiw/codemirror-themes": "^4.25.1",
    "@uiw/react-codemirror": "^4.25.1",
    "classnames": "^2.5.1",
    "codemirror": "^6.0.2",
    "drizzle-orm": "^0.44.5",
    "lucide-react": "^0.544.0",
    "opfsx": "^0.1.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-helmet-async": "^2.0.5",
    "react-hook-form": "^7.62.0",
    "rxjs": "^7.8.2",
    "sqlocal": "^0.14.2",
    "validator": "^13.15.15",
    "wouter": "^3.7.1",
    "zod": "^4.1.8"
